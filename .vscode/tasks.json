{
    "version": "2.0.0",
    "tasks": [

    // Lib...
    {
        "label": "lib: Clean",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/lib/task/clean",
        "options": {
            "statusbar": { "hide": true }
        }
    }, {
        "label": "lib: Build [debug]",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/lib/task/build",
        "options": {
            "statusbar": { "hide": true }
        }
    }, {
        "label": "lib: Build [release]",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/lib/task/build --release",
        "options": {
            "statusbar": { "hide": true }
        }
    },

    // JS...
    {
        "label": "js: Clean",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/js/task/clean",
        "options": {
            "statusbar": { "hide": true }
        }
    }, {
        "label": "js: Build [debug]",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/js/task/build",
        "options": {
            "statusbar": { "hide": true }
        }
    }, {
        "label": "js: Build [release]",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/js/task/build --release",
        "options": {
            "statusbar": { "hide": true }
        }
    },

    // API...
    {
        "label": "api: Clean",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/api/task/clean",
        "options": {
            "statusbar": { "hide": true }
        }
    }, {
        "label": "api: Build [debug]",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/api/task/clean",
        "options": {
            "statusbar": { "hide": true }
        }
    }, {
        "label": "api: Build [release]",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/api/task/build --release",
        "options": {
            "statusbar": { "hide": true }
        }
    },

    // CLI...
    {
        "label": "cli: Clean",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/cli/task/clean",
        "options": {
            "statusbar": { "hide": true }
        }
    }, {
        "label": "cli: Build [debug]",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/cli/task/build",
        "options": {
            "statusbar": { "hide": true }
        },
        "dependsOn": ["lib: Build [debug]", "js: Build [debug]", "api: Build [debug]"]
    }, {
        "label": "cli: Build [release]",
        "type": "shell",
        "command": "node ${workspaceFolder}/pkg/cli/task/build --release",
        "options": {
            "statusbar": { "hide": true }
        },
        "dependsOn": ["lib: Build [release]", "js: Build [release]", "api: Build [release]"]
    },

    // All...
    {
        "label": "all: Clean",
        "type": "shell",
        "command": "node ${workspaceFolder}/task/clean"
    }, {
        "label": "all: Build [debug]",
        "type": "shell",
        "command": "node ${workspaceFolder}/task/build",
        "group": "build"
    }, {
        "label": "all: Build [release]",
        "type": "shell",
        "command": "node ${workspaceFolder}/task/build --release",
        "group": "build"
    }, {
        "label": "all: Dev",
        "type": "shell",
        "command": "node ${workspaceFolder}/task/dev",
        "group": "build"
    }]
}