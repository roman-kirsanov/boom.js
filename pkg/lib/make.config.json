{
    "name": "boom",
    "type": "library",
    "flags": [
        { "value": "-std=c++20" }
    ],
    "include": [{
        "path": "include"
    }],
    "compile": [
        { "path": "src/*.cpp" },
        { "path": "src/Win32/*.cpp", "platform": "windows" },
        { "path": "src/Linux/*.cpp", "platform": "linux" },
        { "path": "src/MacOS/*.cpp", "platform": "macos" },
        { "path": "src/MacOS/*.mm",  "platform": "macos" }
    ],
    "link": [
        { "name": "Shcore.lib", "platform": "windows" },
        { "name": "opengl32.lib", "platform": "windows" },
        { "name": "kernel32.lib", "platform": "windows" },
        { "name": "user32.lib", "platform": "windows" },
        { "name": "gdi32.lib", "platform": "windows" }
    ],
    "export": [
        { "path": "include" }
    ]
}